{
  "version": 2,
  "builds": [
    {
      "src": "frontend/myapp/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/frontend/myapp/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/myapp/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}